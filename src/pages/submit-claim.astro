    <script is:inline src="/js/main.js"></script>
    <script is:inline>
        // File upload handling
        document.getElementById('file-upload').addEventListener('change', function(e) {
            const fileNames = document.getElementById('file-names');
            fileNames.innerHTML = '';
            
            if (this.files.length > 0) {
                const list = document.createElement('ul');
                list.style.listStyle = 'none';
                list.style.padding = '0';
                list.style.marginTop = '10px';
                
                for (let i = 0; i < this.files.length; i++) {
                    const item = document.createElement('li');
                    item.style.display = 'flex';
                    item.style.alignItems = 'center';
                    item.style.gap = '8px';
                    item.style.marginBottom = '5px';
                    item.style.fontSize = '0.9rem';
                    item.style.color = '#2196f3';
                    
                    const icon = document.createElement('i');
                    icon.className = 'fas fa-file-alt';
                    
                    const text = document.createTextNode(this.files[i].name);
                    
                    item.appendChild(icon);
                    item.appendChild(text);
                    list.appendChild(item);
                }
                
                fileNames.appendChild(list);
            }
        });
        
        // Form submission
        document.getElementById('claim-submission-form').addEventListener('submit', function(e) {
            e.preventDefault();
            // Add form submission logic here
            alert('Your claim has been submitted successfully! We will review it and get back to you soon.');
            this.reset();
            document.getElementById('file-names').innerHTML = '';
        });
    </script>
	<!-- In the head section, add this before main.js -->
